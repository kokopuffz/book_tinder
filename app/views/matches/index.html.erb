<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="bg-warm-gray-50">
      <div class="relative z-10 max-w-7xl mt-6 mx-auto pl-4 pr-8 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-extrabold tracking-tight text-warm-gray-900 sm:text-5xl lg:text-6xl">Your matches: </h1>
      </div>
    </div>
  </div>
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gradient-to-r from-fuchsia-600 to-pink-600">
              <tr class="divide-x divide-gray-200">
                <th scope="col" class="py-3.5 pl-4 pr-4 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
                <th scope="col" class="px-4 py-3.5 text-left text-sm font-semibold text-gray-900">Number of matches</th>
                <th scope="col" class="px-4 py-3.5 text-left text-sm font-semibold text-gray-900">Profile link</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @matches.each do |match| %>
                <tr class="divide-x divide-gray-200">
                  <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm font-medium text-gray-900 sm:pl-6"><%= (match[:name] || match[:email]).capitalize  %></td>
                  <td class="whitespace-nowrap p-4 text-sm text-gray-500"><%= match[:number_of_matches] %></td>
                  <td class="whitespace-nowrap p-4 text-sm text-gray-500"><%= link_to "see profile", user_path(match[:id]) %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
