<html class="h-full bg-grey-50">
  <body class="h-full">
    <div class="min-h-full flex flex-col justify-center py-20 sm:px-6 lg:px-8 bg-gradient-to-r from-yellow-200 via-pink-200 to-pink-400">
      <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-2 text-center text-3xl font-extrabold text-gray-900">Sign in</h2>
      </div>
      <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
          <div class="mb-3">
            <img class="h-12 w-auto" src="https://freesvg.org/img/blackcat2.png" alt="cat icon">
            <p class="mt-2 text-sm text-gray-600">
              Don't have an account? 
              <%= link_to "sign up here", "/users/sign_up", class: "font-medium text-indigo-600 hover:text-indigo-500" %>
            </p>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
            <div class="mb-2">
              <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-red-400 focus:border-pink-500 sm:text-sm" %>
              </div>
            </div>
            <div class="mt-3">
              <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.password_field :password, autocomplete: "current-password", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-red-400 focus:border-pink-500 sm:text-sm mb-1" %>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <% if devise_mapping.rememberable? %>
                  <%# <div class="field"> %>
                  <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-red-500 border-gray-300 rounded" %>
                  <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
                </div>
              <% end %>
            </div>
            <div>
              <%= f.submit "Sign-in", class: "mt-3 w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-400 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <% end %>
          </div>
          <div class="rounded-md p-4">
            <div class="flex">
                <h3 class="text-sm font-medium text-red-800"><%= flash[:alert] %>
                  </h3>
                <h3 class="text-sm font-medium text-red-800">
                  <%= flash[:notice] %></h3>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="actions">
      </div>
    </div>
  </body>
</html>
